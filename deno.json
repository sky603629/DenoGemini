{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-read main.ts",
    "test": "deno run --allow-net --allow-env --allow-read test.ts",
    "verify": "deno run --allow-net verify.ts",
    "verify:local": "deno run --allow-net verify.ts http://localhost:8000",
    "diagnose": "deno run --allow-net --allow-env --allow-read diagnose.ts",
    "test:image": "deno run --allow-net test-image.ts",
    "convert:image": "deno run --allow-net --allow-read image-converter.ts",
    "test:auth": "deno run --allow-net test-auth.ts",
    "test:stream": "deno run --allow-net test-stream.ts",
    "test:image-perf": "deno run --allow-net test-image-performance.ts",
    "test:image-simple": "deno run --allow-net test-image-simple.ts",
    "test:logs": "deno run --allow-net test-logs.ts",
    "test:deploy": "deno run --allow-net --allow-env test-deploy-config.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@0.225"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
